    <!--STYLES-->
    <link rel="stylesheet" href="/styles/bootstrap.css">
    <link rel="stylesheet" href="/styles/custom.css">
    <link rel="stylesheet" href="/styles/importer.css">
    <!--STYLES END-->
  </head>

  <body>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
	  <div class="navbar-header">
	   	
	   <a class="navbar-brand" href="/">Crowdsourcing</a>
	</div>
	<div class="navbar-collapse collapse">
	 <ul class="nav navbar-nav">
	  <% if ((session.authenticated)&&(session.utilisateur.usertype=="Demandeur")) {%>
	    <li class="active"><a href="/demandeur/index/"><%= session.utilisateur.username %></a></li>
		<li><a href="/demandeur/imports">Mes imports</a></li>
		<% } %>
		
		
		  <% if ((session.authenticated)&&(session.utilisateur.usertype=="Crowder")) {%>
	    <li class="active"><a href="/crowder/index/"><%= session.utilisateur.username %></a></li>
		
		<% } %>
		
		
	</ul>
	<div class="navbar-right">
	 <% if(session.authenticated) {%>
	   <a class="btn btn-default navbar-btn navbar-right" href="/session/destroy">se d√©connecter</a>
	  <% } %> 
	</div>
	
	<% if(!session.authenticated) {%>
	   <form class="navbar-form navbar-right" action="/session/create">
	   <div class="form-group">
	      <input type="text" placeholder="username" name="username" class="form-control">
		  </div>
		  <div class="form-group">
		   <input type="password" placeholder="Mot de passe" name="password" class="form-control">
		   </div>
		   
		   <button type="submit" class="btn btn-success">se connecter</button>
		   <input type="hidden" name="_csrf" values="<%= _csrf %>" />
		   </form>
	<% } %> 
	</div>
	</div>
	</div>
    <%- body %>
	<div class="container">
	<hr>
	 <footer class="footer pull-right">
	  <div>
	  
	  </div>
	  
	  </footer>
	  
	  </div>


    <!--SCRIPTS-->
    <script src="/js/dependencies/sails.io.js"></script>
    <script src="/js/dependencies/bootstrap.js"></script>
    <!--SCRIPTS END-->
  </body>
</html>
