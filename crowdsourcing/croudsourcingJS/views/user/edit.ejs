<form action="/user/update/<%= user.id %>" method="POST" class="form-signin">
<h2>Modification utilisateur</h2>


<input value="<%= user.email %>" name="email" type="text" class="form-control" />
<input value="<%= user.type %>" name="type" type="text" class="form-control" />
<input value="<%= user.name %>" name="name" type="text" class="form-control" />
<input type="submit" value="confirmer" class="btn btn-lg btn-primary btn-block" />

<input type="hidden" name="_csrf" value="<%=_csrf%>" />

</form>